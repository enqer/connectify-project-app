<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.LogLayout">
        <children>
            <Label fx:id="loginTitle" text="Logowanie">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <TextField id="loginLog" fx:id="loginLog" focusTraversable="false" promptText="Login">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
      <PasswordField id="passwordLog" fx:id="passwordLog" focusTraversable="false" promptText="Hasło">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
            <Button id="loginLogBtn" mnemonicParsing="false" onAction="#loginUser" text="Zaloguj">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </VBox.margin>
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                </padding>
            </Button>
            <Label fx:id="loginInfo">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Label>
      <Label fx:id="forgetPass2" onMouseClicked="#showHelp" text="Kliknij tutaj!" underline="true">
         <graphic>
            <Label fx:id="forgetPass" text="Zapomniałeś hasła?" />
         </graphic>
      </Label>
      <Label fx:id="helperInputText" text="Wprowadź email:" visible="false">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <TextField id="emailHelper" fx:id="emailHelper" promptText="Email" visible="false">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="btnHelp" mnemonicParsing="false" onAction="#sendHelp" text="Wyślij" visible="false">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></Button>
      <Label fx:id="helperInfo">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin>
      </Label>
        </children>
   <padding>
      <Insets top="10.0" />
   </padding>
    </VBox>
